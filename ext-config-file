# Path to the binary under test
binary:texttest.py

# Best to have this: it's needed on windows
interpreter:python

# Default settings. You need to set these if you want multiple checkouts of TextTest!
checkout_location:${SOURCE_PATH}
default_checkout:.

# Run-dependent text. TextTest talks about its checkout, which 
# depends on the local machine and path, so remove this. Also remove Python
# errors which talk about absolute filenames to source code. etc.
output:checkout
output:BadApplication
output:wait for
output:Reconnecting to test
output:Faking start
output:FAILED on
targetReport:FAILED on
targetReport:tests ran
targetReport:{LINE 1}
catalogue:.nfs
catalogue:subdirectory TargetApp/dip
catalogue:subdirectory TargetApp/core
errors:RENDER
errors:\.py
errors:CountTest.__del__
errors:.carmen.se:

# Official name of the application
full_name:TextTest

# List of (generally directories) to copy from the test directory to the write directory
# because we want to write there.
copy_test_path:TargetApp

# List of constant input files to create links to. Will copy them on Windows as symbolic links
# don't exist.
link_test_path:wibble.py
link_test_path:gui_script
link_test_path:config

# Tell it that we want to track what files are created
create_catalogues:true

# Things to collate
collate_file:TargetApp/Failures/memory.mem->targetMem
collate_file:TargetApp/batchreport*->targetReport

# Programs for viewing files
view_program:emacs
follow_program:tail -f
diff_program:tkdiff

# Which configuration to use. 3 are provided: any number can be written by the user.
# Corresponds to the name of a python module containing a configuration to be loaded.
# Provided are:

# default    - works anywhere, in theory
# unixConfig - works anywhere on UNIX (uses UNIX tools such as tkdiff and sendmail)
# lsf        - works on UNIX with Platform's LSF installed for load-balanced running
# across a network. 
config_module:unixConfig


