#!/usr/bin/env python

import os, time, signal, sys

if ":2" in sys.argv:
    # Leak a lock file and check TextTest cleans it for us
    open("/tmp/.X2-lock", "w").close()
    os.kill(os.getppid(), signal.SIGUSR1)
    signal.pause()
else:
    sys.stderr.write("""
Fatal server error:
Could not create server lock file: /tmp/.X1-lock
""")
