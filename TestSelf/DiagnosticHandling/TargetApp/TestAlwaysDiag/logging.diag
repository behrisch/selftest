
[logger_root]
handlers=root
level=ERROR

[handler_root]
class=StreamHandler
level=ERROR
args=(sys.stdout,)

[handler_stdout]
class=StreamHandler
args=(sys.stdout,)
#formatter=timed

[formatter_timed]
format=%(asctime)s - %(message)s

[formatter_debug]
format=[ %(name)s ] %(levelname)s: %(message)s

# ====== The following are disabled by default ======
# ======= Section for firstdiag ======
[logger_firstdiag]
handlers=firstdiag
qualname=firstdiag
level=DEBUG

[handler_firstdiag]
class=FileHandler
formatter=debug
#args=(os.devnull, 'a')
args=('%(LOCAL_DIR)s/first.diag', 'a')

# ======= Section for seconddiag ======
[logger_seconddiag]
handlers=seconddiag
qualname=seconddiag
level=INFO

[handler_seconddiag]
class=FileHandler
formatter=debug
#args=(os.devnull, 'a')
args=('%(LOCAL_DIR)s/second.diag', 'a')

# ======= Section for thirddiag ======
[logger_thirddiag]
handlers=thirddiag
qualname=thirddiag
level=INFO

[handler_thirddiag]
class=FileHandler
formatter=debug
#args=(os.devnull, 'a')
args=('%(LOCAL_DIR)s/third.diag', 'a')

# ====== Cruft that python logging module needs ======
[loggers]
keys=root,firstdiag,seconddiag,thirddiag

[handlers]
keys=root,firstdiag,seconddiag,thirddiag,stdout

[formatters]
keys=timed,debug

